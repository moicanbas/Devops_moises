{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "lufemage_app",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				//
				"buildArgs": {
					"UID": "1000"
				},
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			//
			"dockerRun": {
				"volumes": [
					{"containerPath": "/app", "localPath": "${workspaceFolder}"},
				],
				//
				"ports": [
					{"containerPort": 8000, "hostPort": 8000}
				]
			},
			"python": {
				"args": [
					"runserver",
					"0.0.0.0:8000",
					// "--nothreading",
					"--noreload",
				],
				"file": "manage.py"
			}
		}
	]
}